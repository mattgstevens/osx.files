[user]
  name = mattgstevens
  email = mattgstevens@gmail.com

[diff]
  tool = diffmerge
[difftool "diffmerge"]
  cmd = diffmerge \"$LOCAL\" \"$REMOTE\"

[merge]
  ff = only
  defaultToUpstream = true

[core]
  excludesfile = ~/.gitignore_global
  trustctime = false

[push]
  default = current

[color]
  ui = auto
[color "branch"]
  current = white
  local = green
  remote = cyan
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[heroku]
  account = mattgstevens

[hub]
	protocol = ssh
